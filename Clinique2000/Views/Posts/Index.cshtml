

@model IEnumerable<Clinique2000.Models.Post>

@{
    ViewData["Title"] = "Blogue santé";
}
<div class="row ">
    <div class="row ">
        <div class="col-md-12  ">
            <h2 class="greenText">Blogue santé</h2>
        </div>

    </div>
    <div class="row ">
        <div class="col-md-12 imgSize">
            <h2></h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" asp-action="Create">Nouveau</a>
                <table align="right" width="300" height="50">
                    <tr>
                        <td>
                            <form asp-action="Index" method="post">
                                <div class="row input-group">
                                    <input type="text" name="search" id="search" class="form-control" size="200" />
                                    <div class="row input-group-btn">
                                        <input type="submit" class="btn btn-primary" value="Search" />
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        
        <table class="table ">
            <col width="200" />
            <col width="180" />
            <col width="450" />
            <col width="100" />

            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OverView)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseDate)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>

                        <td>
                            <img style="width:100%" src="@Html.DisplayFor(modelItem => item.ImgFilePath)" />

                        </td>
                        <td>

                            <p>@Html.DisplayFor(modelItem => item.Title)</p>


                        </td>
                        <td>

                            <p> @Html.DisplayFor(modelItem => item.OverView)</p>

                        </td>

                        <td>

                            <p>@Html.DisplayFor(modelItem => item.ReleaseDate)</p>

                        </td>

                        <td>
                            <a class="btn btn-success" asp-action="Details" asp-route-id="@item.PostId">Lire</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PostId">Modifier</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PostId">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
